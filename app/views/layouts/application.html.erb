<!DOCTYPE html>
<html>
  <head>
    <title>BaRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <header>
      <div class="container">
        <div>
          <div class="col-lg-4">
            <h1>
              <%= link_to "婆ーレコード", products_path %>
            </h1>
            <h2 class="col-lg-2">
              ログイン状況
            </h2>
            <div class="col-lg-6">
              <ul class="list-inline">
                <li><%= link_to "新規登録", new_user_registration_path %></li>
                <li><%= link_to "ログイン", user_session_path %></li>
                <li><%= link_to "カート", carts_path %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </header>
    <%= form_tag(:controller=>'products', :action=>'search') do %>
    <%= text_field_tag :title %>
    <%= submit_tag "検索" %>
    <% end %>

  <body>
    <%= yield %>
  </body>
</html>
