<h1>トップページ</h1>

<% @products.each do |product| %>
	<%= attachment_image_tag product, :image, :fill, 50, 50, format:'jpeg' %>
	<%= product.title %>
	<%= product.price %>えん
    <%= product.id %> <br>
    <% product.discs.each do |disc| %>
        disc:<%= disc.id %><br>
        <% disc.tunes.each do |tune| %>
        	songname:<%= tune.title %><br>
        	artist:<%= tune.artist.name %><br><br>
		<% end %>
	<% end %>
<% end %>